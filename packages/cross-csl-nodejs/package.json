    "@emurgo/cross-csl-core": "7.1.1",
    "@emurgo/cardano-serialization-lib-nodejs": "14.1.2"
  },
  "devDependencies": {
    "@types/node": "^16.11.56",
    "chai": "^4.3.4",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}